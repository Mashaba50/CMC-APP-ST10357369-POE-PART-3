@{
    ViewData["Title"] = "Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Login">ContractMonthlyClaimSystem</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item me-2">
                    <a class="nav-link btn btn-outline-primary btn-sm @(ViewContext.RouteData.Values["action"].ToString() == "Login" ? "btn-primary text-white" : "")"
                       asp-controller="Home" asp-action="Login">Home</a>
                </li>
                <li class="nav-item me-2">
                    <a class="nav-link btn btn-outline-success btn-sm" asp-controller="Lecturer" asp-action="SubmitClaim">Submit Claim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Logout">Logout</a>
                </li>

            </ul>
        </div>
    </div>
</nav>

<!-- Login Card -->
<div class="d-flex justify-content-center align-items-center flex-column" style="min-height: 70vh; gap: 20px;">
    <div class="card p-5 shadow-lg rounded-4" style="width: 600px;">
        <h2 class="text-center mb-4"> 👤 Lecturer Login</h2>

        <form asp-action="Login" method="post">
            <input type="text" name="lecturerName" class="form-control mb-3" placeholder="Enter your name" required />
            <input type="email" name="lecturerEmail" class="form-control mb-3" placeholder="Enter your email" required />
            <button type="submit" class="btn btn-primary w-100 fw-bold">Login</button>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </form>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #0d6efd; /* Bootstrap blue */
        border-color: #0d6efd;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0b5ed7;
        }

    .navbar .btn {
        padding: 0.35rem 0.75rem;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
