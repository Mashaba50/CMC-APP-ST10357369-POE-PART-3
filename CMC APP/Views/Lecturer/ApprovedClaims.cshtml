@model IEnumerable<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Approved Claims";
}

<h2>Approved Claims</h2>

<a asp-action="GenerateReport" class="btn btn-success mb-3">Download Report</a>

<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Lecturer Name</th>
            <th>Email</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.Email</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
            </tr>
        }
    </tbody>
</table>
