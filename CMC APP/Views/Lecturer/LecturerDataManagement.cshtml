@model IEnumerable<CMCS.Models.Lecturer>
<h2>Lecturers</h2>

<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lecturer in Model)
        {
            <tr>
                <td>@lecturer.Name</td>
                <td>@lecturer.Email</td>
                <td>@lecturer.Phone</td>
                <td>
                    <a asp-action="EditLecturer" asp-route-id="@lecturer.Id" class="btn btn-sm btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
