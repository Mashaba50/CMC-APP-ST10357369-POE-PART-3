@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "View Claims";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">

        <a class="navbar-brand" href="#">CMS</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item me-2">
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Lecturer" asp-action="SubmitClaim">Submit Claim</a>
                </li>
                <li class="nav-item me-2">
                    <a class="btn btn-outline-success btn-sm" asp-controller="Lecturer" asp-action="ViewClaims">View Claims</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-warning btn-sm" asp-controller="HR" asp-action="Reports">HR Reports</a>
                </li>
            </ul>
            <a class="btn btn-outline-danger btn-sm" asp-controller="Home" asp-action="Logout">Logout</a>
            <a class="nav-link btn btn-outline-primary btn-sm" asp-controller="Home" asp-action="Index">Home</a>

        </div>
    </div>
</nav>

<div class="container mt-4">
    <h2 class="mb-4 text-center text-primary">Your Submitted Claims</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No claims submitted yet.</div>
    }
    else
    {
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Date Submitted</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate (R)</th>
                    <th>Total Amount (R)</th>
                    <th>Status</th>
                    <th>Document</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.DateSubmitted.ToString("dd/MM/yyyy")</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("F2")</td>
                        <td>@(claim.TotalAmount.ToString("F2"))</td>
                        <td>
                            @if (claim.Status == "Approved")
                            {
                                <span class="badge bg-success">@claim.Status</span>
                            }
                            else if (claim.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">@claim.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@claim.Status</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                            {
                                <a href="@claim.SupportingDocumentPath" target="_blank" class="btn btn-sm btn-info">View</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
